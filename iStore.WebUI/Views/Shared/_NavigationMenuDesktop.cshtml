@model string

<div class="row">
    <div class="col-lg-12 hidden-xs hidden-sm hidden-md visible-lg">
        <div class="store-banner-lg">
            <div class="row">
                <div class="col-lg-7 store-title-lg">
                    <div style="font-size: 6em">МАГАЗИН</div>
                    <div style="font-size: 4em">для будущих мамочек</div>
                </div>
                <div class="col-lg-offset-7 col-lg-5">
                    <a href="#"><img class="img-responsive" src="~/Images/ec_guy_lg.jpg"></a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-12 hidden-xs hidden-sm visible-md hidden-lg">
        <div class="store-banner-md">
            <div class="row">
                <div class="col-md-7 store-title-md">
                    <div style="font-size: 5em">МАГАЗИН</div>
                    <div style="font-size: 3em">для будущих мамочек</div>
                </div>
                <div class="col-md-offset-7 col-md-5">
                    <a href="#"><img class="img-responsive" src="~/Images/ec_guy_md.jpg"></a>
                </div>
            </div>
        </div>
    </div>

    <div class="col-sm-12 hidden-xs visible-sm hidden-md hidden-lg">
        <div class="store-banner-sm">
            <div class="row">
                <div class="col-sm-7 store-title-sm">
                    <div style="font-size: 4em">МАГАЗИН</div>
                    <div style="font-size: 2em">для будущих мамочек</div>
                </div>
                <div class="col-sm-offset-7 col-sm-5">
                    <a href="#"><img class="img-responsive" src="~/Images/ec_guy_sm.jpg"></a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12 hidden-xs hidden-sm hidden-md visible-lg">
        <ul class="store-menu-lg center-block">
            @Html.Partial("_NavigationMenu", Model)
        </ul>
    </div>

    <div class="col-md-12 hidden-xs hidden-sm visible-md hidden-lg">
        <ul class="store-menu-md center-block">
            @Html.Partial("_NavigationMenu", Model)
        </ul>
    </div>

    <div class="col-sm-12 hidden-xs visible-sm hidden-md hidden-lg">
        <ul class="store-menu-sm center-block">
            @Html.Partial("_NavigationMenu", Model)
        </ul>
    </div>
</div>
